<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="NextyFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Fredo\Nexty\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Fredo\Nexty\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">NextyValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">NextyCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="NextyConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Fredo\Nexty\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with NextyConfig -->
    <virtualType name="NextyLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">NextyConfig</argument>
        </arguments>
    </virtualType>

    <type name="Fredo\Nexty\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">NextyLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="NextyCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">NextyAuthorizeCommand</item>
                <item name="capture" xsi:type="string">NextyCaptureCommand</item>
                <item name="void" xsi:type="string">NextyVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="NextyAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">NextyAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">NextyResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Fredo\Nexty\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Fredo\Nexty\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="NextyAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Fredo\Nexty\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Fredo\Nexty\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Fredo\Nexty\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">NextyConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="NextyCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Fredo\Nexty\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Fredo\Nexty\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Fredo\Nexty\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Fredo\Nexty\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Fredo\Nexty\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Fredo\Nexty\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">NextyConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="NextyVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Fredo\Nexty\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Fredo\Nexty\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Fredo\Nexty\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Fredo\Nexty\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Fredo\Nexty\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Fredo\Nexty\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">NextyConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="NextyResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Fredo\Nexty\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Fredo\Nexty\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="NextyValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">NextyConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="NextyConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">NextyConfig</argument>
        </arguments>
    </virtualType>

    <type name="Fredo\Nexty\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">NextyConfig</argument>
        </arguments>
    </type>

</config>
